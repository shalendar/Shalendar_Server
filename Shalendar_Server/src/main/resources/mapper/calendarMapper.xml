<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="calendar">
	
	<!-- 공유달력 생성  -->
	<insert id="createCal">
		insert into calendar (id,calName,calContent,img_url) values (#{id},#{calName},#{calContent},#{img_url})
	</insert>
	
	<!-- 공유달력 삭제 -->
	<!-- 삭제할 달력의 이름과 달력 생성시 만든 사용자의 id를 같이 보내야 한다 -->
	<delete id="deleteCal" parameterType="String">
		delete from calendar where calName = #{calName} and id=#{id}
	</delete>
	
	<!-- 공유달력 수정 -->
	<!-- 바꿀 달력의 이름, 변경할 정보랑 달력을 생성한 사용자 정보를 같이 보내줘야한다 -->
	<update id="updateCal" parameterType="cdto">
		update calendar set calName=#{updateCalName},calContent=#{calContent},img_url=#{img_url} where id=#{id} and calName=#{calName}
	</update>
	
	<!-- 공유달력 조회 -->
	<select id="readCal" resultMap="cmap">
		select id,cid from calendar where calName=#{calName}
	</select>
	
	<!-- 캘린더 사용자 추가 -->
	<select id="adduserCal_list">
		select id from calendar where cid=#{cid}
	</select>
	
	<!-- select하고 id변수에 추가하여 다시 update하여 저장 -->
	<update id="addUserCal">
		update calendar set id where cid=#{cid}
	</update>
	
	<resultMap type="cdto" id="cmap">
		<result property="id" column="id"/>
		<result property="cid" column="cid"/>
		<result property="calName" column="calName"/>
		<result property="calContent" column="calContent"/>
		<result property="userCount" column="userCount"/>
		<result property="img_url" column="img_url"/>
	</resultMap>
	

</mapper>